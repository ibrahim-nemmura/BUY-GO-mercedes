<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        >

        <TextView
            android:id="@+id/textView"
            style="@style/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corporate"
            android:paddingTop="35dp"
            android:text="@string/buy_go"
            android:textSize="50sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/login_icn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/best_or_never"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/corporate"
            android:textColor="@color/white"
            />


        <EditText
            android:id="@+id/e_mail"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_field_grey"
            android:ems="10"
            android:fontFamily="@font/corporate"
            android:gravity="center"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/password"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="@string/pass"
            android:fontFamily="@font/corporate"
            android:background="@drawable/text_field_grey"
            android:ems="10"
            android:inputType="textPassword"
            android:gravity="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/corporate"
            android:text="@string/login"
            android:onClick="signinClicked"
            />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="44dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/or"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/corporate"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/google_sign_btn"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/google" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="129dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/corporate"
                android:text="@string/with_go"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/facebook"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/facebook" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="129dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/corporate"
                android:text="@string/with_go"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/corporate"
                android:text="@string/you_not_member"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="75dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/register_btn"
                android:onClick="registerClicked" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>