<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/profileProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:visibility="gone" />
    </RelativeLayout>

    <Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="+919607583080"
        android:titleTextColor="#FFFFFF" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveCard"
        android:layout_below="@id/profileToolbar"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="15dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/photo_camera"
                    android:scaleX="2"
                    android:scaleY="2" />
            </RelativeLayout>

            <EditText

                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Age"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/profileAge"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="15dp" />


                <Spinner
                    android:id="@+id/profileGender"
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:entries="@array/gender" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Pincode"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/profilePincode"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="15dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/profileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room and Hostel"
                android:padding="15dp" />

            <EditText
                android:id="@+id/profileCollege"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="College"
                android:padding="15dp" />


        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/saveCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/profileSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:theme="@style/ThemeOverlay.FilterButton" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>